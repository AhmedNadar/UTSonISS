<div class="col-sm-12 col-xs-12">
	<%= simple_form_for(@project) do |f| %>
	<%= f.error_notification %>

		<div class="form-inputs">
			<div class="input-group">
			  <span class="input-group-addon" id="basic-addon1">@</span>
			  <%= f.input :name, label: false, placeholder: "Project Name", aria: {describedby: "basic-addon1"}, input_html: {class: "form-control"}%>
			</div>
			<br	/>

			<div class="input-group">
				<%= f.input :description, as: :text, label: false, placeholder: "Project description", aria: {describedby: "basic-addon1"}, input_html: {class: "form-control" }, row: "3"%>
			</div>
			<%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select one!") %>

			<%= f.fields_for :students do |builder| %>
				<div class="input-group">
				  <span class="input-group-addon" id="basic-addon1">@</span>
					<%= builder.input :name, label: false, placeholder: "Students Name" %>
					<%= builder.input :grade, label: false, placeholder: "Students Grade" %>

				</div>
			<% end %>
			<br	/>
			<div class="form-actions">
				<%= f.button :submit, input_html: {class: "btn btn-default"} %>
			</div>
		</div>	
	<% end %>
</div>
